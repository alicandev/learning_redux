{
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
